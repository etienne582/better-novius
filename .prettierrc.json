{
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "crlf",
    "tabWidth": 4,
    "printWidth": 120,
    "overrides": [
        {
            "files": ["package.json", "package-lock.json", "src/app/generated/**"],
            "options": {
                "printWidth": 50000
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}
